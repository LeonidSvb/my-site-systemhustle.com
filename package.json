{
  "name": "systemhustle-website",
  "version": "2.0.0",
  "description": "AI Automation Specialist Website - Professional business site with automated testing",
  "main": "index.html",
  "scripts": {
    "start": "py -m http.server 4000",
    "test": "playwright test",
    "test:headed": "playwright test --headed",
    "test:debug": "playwright test --debug",
    "test:report": "playwright show-report test-results/html-report",
    "test:install": "playwright install",
    "test:quick": "playwright test --project=chromium",
    "test:mobile": "playwright test --project='Mobile Chrome'",
    "test:visual": "playwright test --grep='Visual Tests'",
    "server": "py -m http.server 4000",
    "dev": "py -m http.server 4000",
    "build": "echo 'Static site - no build required'",
    "lint": "echo 'Add linting later if needed'",
    "deploy": "echo 'Deployment via GitHub Pages'"
  },
  "devDependencies": {
    "@playwright/test": "^1.40.0"
  },
  "keywords": [
    "ai-automation",
    "business-website",
    "playwright",
    "testing",
    "static-site"
  ],
  "author": "Leonid Shvorob",
  "license": "MIT",
  "homepage": "https://systemhustle.com",
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/systemhustle.com.git"
  },
  "engines": {
    "node": ">=16.0.0"
  }
}